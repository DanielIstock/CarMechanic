<Window x:Class="CarMechanic.CarForm.CarForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CarForm" Height="300" Width="400">
    <Grid>
        <StackPanel>
            <Label Content="Model:"/>
            <TextBox Name="ModelTextBox" Text="{Binding Model}" Margin="0,0,0,10"/>
            <Label Content="License Plate:"/>
            <TextBox Name="LicensePlateTextBox" Text="{Binding LicensePlate}" Margin="0,0,0,10"/>
            <Label Content="User:"/>
            <ComboBox Name="UserComboBox" ItemsSource="{Binding Users}" DisplayMemberPath="Name" SelectedItem="{Binding User}" Margin="0,0,0,10"/>
            <Button Content="Save" HorizontalAlignment="Center" VerticalAlignment="Bottom" Click="SaveButton_Click" Width="100" Height="30" Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</Window>
