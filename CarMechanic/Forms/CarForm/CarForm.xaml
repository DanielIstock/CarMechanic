<Window x:Class="CarMechanic.CarForm.CarForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Car Form" Height="300" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <Label Content="Model"/>
            <TextBox x:Name="ModelTextBox" Width="200" Margin="0,0,0,10"/>
            <Label Content="License Plate"/>
            <TextBox x:Name="LicensePlateTextBox" Width="200" Margin="0,0,0,10"/>
            <Label Content="User"/>
            <ComboBox x:Name="UserComboBox" DisplayMemberPath="Name" Width="200" Margin="0,0,0,10"/>
            <Button Content="Save" Click="Save_Click"/>
        </StackPanel>
    </Grid>
</Window>
