<Window x:Class="CarMechanic.CarForm.CarDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Car Details" Height="300" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <Label Content="Model"/>
            <TextBlock Text="{Binding Car.Model}"/>
            <Label Content="License Plate"/>
            <TextBlock Text="{Binding Car.LicensePlate}"/>
            <Label Content="User"/>
            <TextBlock Text="{Binding Car.User.Name}"/>
            <Label Content="Repairs"/>
            <ListBox ItemsSource="{Binding Car.Repairs}" DisplayMemberPath="Description" Height="100"/>
        </StackPanel>
    </Grid>
</Window>
