<Window x:Class="CarMechanic.RepairForm.RepairDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Repair Details" Height="300" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <Label Content="Repair Date"/>
            <TextBlock Text="{Binding Repair.RepairDate}"/>
            <Label Content="Description"/>
            <TextBlock Text="{Binding Repair.Description}"/>
            <Label Content="Car"/>
            <TextBlock Text="{Binding Repair.Car.Model}"/>
            <Label Content="Parts"/>
            <ListBox ItemsSource="{Binding Repair.Parts}" DisplayMemberPath="Name" Height="100"/>
        </StackPanel>
    </Grid>
</Window>
