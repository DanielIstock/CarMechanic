<Window x:Class="CarMechanic.RepairForm.RepairForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RepairForm" Height="400" Width="300">
    <Grid>
        <StackPanel>
            <Label Content="Car:" />
            <ComboBox x:Name="CarComboBox" DisplayMemberPath="Model" SelectedValuePath="Id" />

            <Label Content="Date:" />
            <DatePicker SelectedDate="{Binding Date}" />

            <Label Content="Description:" />
            <TextBox Text="{Binding Description}" />

            <Label Content="Parts:" />
            <ListBox x:Name="PartsListBox" DisplayMemberPath="Name" SelectedValuePath="Id" SelectionMode="Extended" />

            <Button Content="Save" Click="SaveButton_Click" />
            <Button Content="Cancel" Click="CancelButton_Click" />
        </StackPanel>
    </Grid>
</Window>
