<Window x:Class="CarMechanic.PartForm.PartForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PartForm" Height="200" Width="400">
    <Grid>
        <StackPanel>
            <Label Content="Name:"/>
            <TextBox Name="NameTextBox" Text="{Binding Name}" Margin="0,0,0,10"/>
            <Label Content="Price:"/>
            <TextBox Name="PriceTextBox" Text="{Binding Price}" Margin="0,0,0,10"/>
            <Button Content="Save" HorizontalAlignment="Center" VerticalAlignment="Bottom" Click="SaveButton_Click" Width="100" Height="30" Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</Window>
