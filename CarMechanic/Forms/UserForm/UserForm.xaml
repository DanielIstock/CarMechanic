<Window x:Class="CarMechanic.UserForm.UserForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="UserForm" Height="300" Width="400">
    <Grid>
        <StackPanel>
            <Label Content="Name:"/>
            <TextBox Name="NameTextBox" Text="{Binding Name}" Margin="0,0,0,10"/>
            <Label Content="Email:"/>
            <TextBox Name="EmailTextBox" Text="{Binding Email}" Margin="0,0,0,10"/>
            <Button Content="Save" HorizontalAlignment="Center" VerticalAlignment="Bottom" Click="SaveButton_Click" Width="100" Height="30" Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</Window>
